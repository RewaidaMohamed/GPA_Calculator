<html>
<head>
	<title>GPA</title>
	<%= stylesheet_link_tag('application' ,:media => 'all') %>
</head>
<body id="calc">
	<div id = "logo_name">
		<h1>GPA Calculator</h1>
		<div id = "logo_pic">
			<%= image_tag('app_icon.png', :width => 55 , :height => 55 )  %>
		</div>
	</div>
	<%= link_to("<< Back" , :controller => "demo" ,:action => "homepage" , :id => params[:user_id]) %>
